{
  "name": "link-opener",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "js:watch": "shadow-cljs watch app",
    "css:watch": "postcss src/css/tailwind.css -o ./public/css/main.css --verbose -w",
    "js:release": "shadow-cljs release app",
    "css:release": "NODE_ENV=production postcss src/css/tailwind.css -o ./public/css/main.css",
    "clean": "rm -rf target && rm -rf public/js && rm -rf public/css"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.3.2",
    "autoprefixer": "^10.2.5",
    "postcss": "^8.2.10",
    "postcss-cli": "^8.3.1",
    "shadow-cljs": "2.12.5",
    "tailwindcss": "^2.1.1"
  },
  "dependencies": {
    "react": "17.0.1",
    "react-dom": "17.0.1"
  }
}
